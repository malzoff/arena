<ehcache>

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            maxElementsInMemory="1000"
            eternal="true"
            timeToIdleSeconds="0"
            timeToLiveSeconds="0"
            overflowToDisk="false"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="3600"
            />

    <cache name="org.hibernate.cache.spi.UpdateTimestampsCache"     maxElementsInMemory="1000"/>
    <cache name="org.hibernate.cache.internal.StandardQueryCache"   maxElementsInMemory="1000"/>

    <cache name="testapp.db.beans.User" maxElementsInMemory="1000"/>
    <cache name="testapp.db.beans.Player" maxElementsInMemory="1000"/>
    <cache name="testapp.db.beans.ArenaParticipant" maxElementsInMemory="1000"/>

</ehcache>
